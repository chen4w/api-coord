<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

    <!-- 磁盘缓存位置 -->
    <diskStore path="./ehcache"/>

    <!-- 默认缓存 -->
    <defaultCache
            maxElementsInMemory = "1"
            eternal="true"
            overflowToDisk="true"
            diskPersistent="true"
            maxElementsOnDisk="0">
    </defaultCache>

    <!-- Repchain缓存 -->
    <cache name="RepChain"
           maxElementsInMemory = "1"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxElementsOnDisk="0"/>
    <!-- 存证缓存 -->
    <cache name="ReqAckProof"
           maxElementsInMemory = "1"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxElementsOnDisk="0"/>
    <!-- 定义缓存 -->
    <cache name="ApiDefinition"
           maxElementsInMemory = "1"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxElementsOnDisk="0"/>
    <!-- 登记缓存 -->
    <cache name="ApiServAndAck"
           maxElementsInMemory = "1"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxElementsOnDisk="0"/>
    <!-- 异步数据header记录 -->
    <cache name="AsyncHeader"
           maxElementsInMemory = "1"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           maxElementsOnDisk="0"/>
</ehcache>
